<odoo>
    <record id="mail_template_usuario_empleado" model="mail.template">
        <field name="name">Usuario Empleado - Bienvenida</field>
        <field name="email_form">${(user.mail or 'nayaretasan@gmail.com')|safe}</field>
        <field name="model_id" ref="hr.model_hr_employee"/>
        <field name="lang">${object.env.user.lang}</field>
        <field name="auto_delete" eval="True"/>
        <field name="subject">Tu usuario de Odoo</field>
        <field name="body_html">
            <![CDATA[
                <p>Hola ${object.name},</p>
                <p>Tu cuenta de empleado ha sido creada en Odoo.</p>
                <p>Para definir tu contraseña, haz clic en el siguiente enlace:</p>
                <p><a href="${object.user_id.signup_url}">Definir mi contraseña</a></p>
                <p>¡Gracias!</p>
            ]]>
        </field>
    </record>
</odoo>