<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="view_categoria_list" model="ir.ui.view">
        <field name="name">categoria.list</field>
        <field name="model">loop.categoria</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <record id="view_categoria_form" model="ir.ui.view">
        <field name="name">categoria.form</field>
        <field name="model">loop.categoria</field>
        <field name="arch" type="xml">
            <form string="Categoría">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_categoria" model="ir.actions.act_window">
        <field name="name">Categorías</field>
        <field name="res_model">loop.categoria</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_categoria" name="Categorías" parent="menu_loop_root" action="action_categoria" sequence="10"/>
</odoo>